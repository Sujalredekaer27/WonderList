<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row mt-4 mb-4">
            <div class="col-8 offset-2">
                <h2><%= listing.title %></h2>
            </div>
            <div class="card col-8 offset-2 show-card listing-card">
                <img src="<%= listing.image.url %>" class="card-img-top show-image" alt="listing_image">
                <div class="card-body">
                    <p class="card-text">
                        

                        Owned By <i><%= listing.owner.username %></i></p>
                        <p class="card-text"><%= listing.description %></p>
                            <p class="card-text"><%= listing.price.toLocaleString("en-IN") %></p>
                                <p class="card-text"><%= listing.location %></p>
                                    <p class="card-text"><%= listing.country %></p>
                    
                </div>
            </div>
            <br>
            <% if(currUser && listing.owner._id.equals(currUser._id)) { %>
            <div class="btns">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-2 add-btn">Edit</a>
            <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                <button class="btn btn-dark offset-4">Delete</button>
            </form>
            </div>
            <% } %>
            
            
            <div class="col-8 offset-2 mb-3">
                <hr>
                <% if(currUser) { %>
                <h4>Leave a Review</h4>
                <form method ="POST" action="/listings/<%=listing._id%>/reviews"  novalidate class="needs-validation">
                    <div class="mb-3 mt-3">
                        <label for="rating" class="form-label">Rating</label>
                        <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-rating">
                    </div>
                    <div class="mb-3 mt-3">
                        <label for="comment" class="form-label">Comments</label>
                        <textarea name="review[comment]" rows="4" cols="60" id="comment" class="form-control" required></textarea>
                        <div class="invalid-feedback">
                            Please add some comments for Review
                        </div>
                    </div>
                    <button class="btn btn-outline-dark">Submit</button>
                </form>

                <hr>
                <% } %>
                <p><b>All Reviews</b></p>
                <div class="row">
                <% for(review of listing.reviews) { %>
                    <div class="card col-md-5 ms-3 mb-3">
                        <div class="card-body mt-2">
                            <h5 class="card-title">
                                <i>@<%= review.author?.username || "Anonymous" %></i>                            </h5>
                            <p class="card-text">
                                <%= review.comment %>
                            </p>
                            <p class="card-text">
                                <%= review.rating %> Star
                            </p>
                        </div>
                        <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" class="mb-2">
                            <button class="btn btn-sm btn-dark">Delete</button>
                        </form>
                    </div>
                <% } %>
                </div>
            </div>
    
        </div>

    </body>



